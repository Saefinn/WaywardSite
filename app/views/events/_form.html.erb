<script>
$(function() {
    // Replace all textarea's
    // with SCEditor
    $("textarea").sceditor({
        plugins: "bbcode",
	style: "jquery.sceditor.default.min.css",
    toolbar: "bold,italic,underline,strike|bulletlist,orderedlist,code,quote|image,link,unlink,maximize|left,center,right|color,cut,copy,paste,pastetext|source"
    });
});
</script>


<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :title, placeholder: 'Event Title' %>

    <%= f.input :description, placeholder: 'Event Details' %>
    <p>Select a date and time for the event</p>
    
    <%= f.input :date %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
