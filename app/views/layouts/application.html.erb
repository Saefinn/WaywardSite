<!DOCTYPE html>
<html>
<head>
  <title>Pirates of a Wayward Star</title>
  <!-- Link all necessary Javascripts and Stylesheets and meta tags -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:700italic,400,700,800|Changa+One:400,400italic' rel='stylesheet' type='text/css'>
  <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="Logo"><h1><%= link_to "Wayward Star", root_path %></h1></div>


<div id="login-bar">
  <% if user_signed_in? %>
      <li><%= link_to current_user.profile_name, edit_user_registration_path %></li>
      <li><%= link_to "Log Out", logout_path %> </li>
  <% else %>
      <li><%= link_to "Register", register_path %></li>
      <li><%= link_to "Log in", login_path %></li>
  <% end %>
</div>

<br/>

<div id="menu">
       <ul>
        <!-- This will link to all of the posts using a Rails path -->
        <li><%= link_to "Rules", rules_path %></li>
        <li><%= link_to "Members", user_list_path %></li>
        <li><%= link_to "Characters", characters_path %></li>
        <li><%= link_to "Journals",feed_path %></li>
        <li><%= link_to "Items", items_path %></li>
        <li id="events"><%= link_to "Events", events_path %></li>
        <li><%= link_to "Forum", posts_path %></li>

      </ul>
</div>



<% if current_user.present? %>


  <div class="secondary-menu">
    <div class="second-inner">
      <div class="container">
        <%= link_to "New Character", new_character_path %> <%= link_to "New Journal Entry", journal_new_path %> <%= link_to 'New Item', new_item_path %> <%= link_to "New Event", new_event_path %> <%= link_to "New Post", new_post_path() %>
      </div>

    </div>
  </div>
<% end %>


<div class="container">
  <!-- These are 2 tags required by Devise that we will address at a later date -->
    
    <% flash.each do |type, message| %>
      <div class="alert <%= flash_class type %>">
        <button class="close" data-dismiss="alert">x</button>
        <%= message %>
      </div>
    <% end %>
    
    <div class="main-text">
    
  <!--This is the actual page content -->
        <%= yield %>
    </div>

</div>

</body>


</html>
