<p id="notice"><%= notice %></p>


  <h2><%= @character.first_name + " " + @character.last_name %></h2>



<h3>Information</h3>
<p>
  <strong>Nick name:</strong>
  <%= @character.nick_name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @character.title %>
</p>

<p>
  <strong>Traits:</strong>
  <%= @character.traits %>
</p>

<p>
  <strong>Skills:</strong>
  <%= @character.skills %>
</p>

<h3>Attributes</h3>
<div class="indent">
<p>
  <strong>Strength:</strong>
  <%= @character.strength %>
</p>

<p>
  <strong>Vitality:</strong>
  <%= @character.vitality %>
</p>

<p>
  <strong>Charisma:</strong>
  <%= @character.agility %>
</p>

<p>
  <strong>Dexterity:</strong>
  <%= @character.dexterity %>
</p>

<p>
  <strong>Intelligence:</strong>
  <%= @character.intelligence %>
</p>

<p>
  <strong>Mind:</strong>
  <%= @character.mind %>
</p>
</div>


  <h3>Description:</h3>
  <p><div class="my-pre"><%= @character.description %></div></p>





  <h3>History:</h3>
  <p><div class="my-pre"><%= @character.history %></div></p>


<h3>Inventory</h3>
<br />
<%@items.each do |item| %>
<div class="item">
    <h5><%= link_to item.name, item_path(item) %></h5>
    <%= link_to 'Edit', edit_item_path(item) %> |
    <%= link_to 'Discard', item, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<%end%>


<div class="bottom">
    <% if current_user.present? %>
        <% if @character.user.profile_name == current_user.profile_name %>
            <%= link_to 'Edit', edit_character_path(@character) %> |

        <% end %>
    <% end %>



    <%= link_to 'Back', characters_path %>
</div>
